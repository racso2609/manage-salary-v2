{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["es2020"],
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "noImplicitAny": false,
      "paths": {
          "@/*": ["src/*"],
          "@docs/*": ["docs/*"],
          "@type/*": ["src/types/*"],
          "@controllers/*": ["src/controllers/*"],
          "@models/*": ["src/models/*"],
          "@constants/*": ["src/constants/*"],
          "@routes/*": ["src/routes/*"]
      }
    },
    "include": ["src/**/*", "tests/**/*", "docs/**/*", "scripts/**/*", "docs/**/*", "src/utils/emails/**/*"],
    "exclude": ["node_modules"],
}
